        }
         .support-category li {
            padding-left: 0.75rem;
            margin-bottom: 1rem;
        }


        /* Strategies Section */
        .strategies-grid {
            display: grid;
            gap: 2rem;
        }
        .strategy-card {
            background-color: #2d3748;
            padding: 1.75rem;
            border-radius: 0.75rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.3), 0 1px 2px 0 rgba(0, 0, 0, 0.16);
        }
        .strategy-card h3 {
