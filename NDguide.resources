        }

        /* Hero Section */
        .hero-section {
            text-align: center;
        }
        .hero-section h1 {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 1.5rem;
            line-height: 1.2;
        }
        .hero-section p {
            font-size: 1.25rem;
            color: #9ca3af;
