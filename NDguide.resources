        @media (min-width: 768px) {
            header .nav-links {
                display: flex;
            }
            .hero-section h1 {
                font-size: 4.5rem;
            }
            .strengths-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            .strategies-grid {
                grid-template-columns: repeat(2, 1fr);
            }
