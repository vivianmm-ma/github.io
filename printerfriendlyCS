    <script>
        const oceanForest = {
            primary: '#2ECC71', // Green
            secondary: '#3498DB', // Blue
            tertiary: '#1A5276', // Darker Blue
            text: '#374151', // text-gray-700
            grid: 'rgba(0, 0, 0, 0.1)',
            primaryTransparent: 'rgba(46, 204, 113, 0.4)',
            secondaryTransparent: 'rgba(52, 152, 219, 0.4)'
        };

        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            }
            return label;
        };
        
        const defaultChartOptions = {
            maintainAspectRatio: false,
            responsive: true,
            plugins: {
                legend: {
                    labels: {
                        color: oceanForest.text,
                        font: {
                            family: "'Times New Roman', Times, serif"
                        }
                    }
                },
                tooltip: {
                    callbacks: {
                        title: tooltipTitleCallback
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: { color: oceanForest.text },
                    grid: { color: oceanForest.grid }
                },
                x: {
                    ticks: { color: oceanForest.text },
                    grid: { color: oceanForest.grid }
                }
            }
        };

        const imbalanceCtx = document.getElementById('imbalanceChart').getContext('2d');
        new Chart(imbalanceCtx, {
            type: 'doughnut',
            data: {
                labels: ['Pull towards Structure (Rigidity, Anxiety)', 'Pull towards Creation (Chaos, Impulsivity)'],
                datasets: [{
                    label: 'Pull of Imbalance',
                    data: [55, 45],
                    backgroundColor: [
                        oceanForest.secondary,
                        oceanForest.primary
                    ],
                    borderColor: '#f3f4f6', // bg-gray-100
                    borderWidth: 4,
                }]
            },
            options: {
                maintainAspectRatio: false,
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                           color: oceanForest.text,
                           font: { family: "'Times New Roman', Times, serif" }
                        }
                    },
                    tooltip: {
                        callbacks: {
                            title: tooltipTitleCallback
                        }
                    }
                }
            }
        });

        const oscillationCtx = document.getElementById('oscillationChart').getContext('2d');
        new Chart(oscillationCtx, {
            type: 'line',
            data: {
                labels: ['Phase 1', 'Phase 2', 'Phase 3', 'Phase 4', 'Phase 5', 'Phase 6'],
                datasets: [{
                    label: 'Creative Energy',
                    data: [10, 90, 85, 20, 15, 70],
                    borderColor: oceanForest.primary,
                    backgroundColor: oceanForest.primaryTransparent,
                    fill: true,
                    tension: 0.4
                }, {
                    label: 'Rigid Structure',
                    data: [90, 10, 15, 80, 85, 30],
                    borderColor: oceanForest.secondary,
                    backgroundColor: oceanForest.secondaryTransparent,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: defaultChartOptions
        });
    </script>
