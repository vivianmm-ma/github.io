<script>
    document.getElementById('calculate-btn').addEventListener('click', function() {
        const form = document.getElementById('ments-form');
        const resultsDiv = document.querySelector('.results');
        const scoreDisplay = document.getElementById('score-display');
        let selfScore = 0;
        let otherScore = 0;
        let motivationScore = 0;
        
        // Items for each subscale
        const selfItems = ['q1', 'q2', 'q3', 'q4', 'q5'];
        const otherItems = ['q6', 'q7', 'q8', 'q9', 'q10', 'q11'];
        const motivationItems = ['q12', 'q13', 'q14', 'q15', 'q16', 'q17'];

        // Reverse-scored items
        const reverseScored = ['q2', 'q3', 'q4', 'q9', 'q13', 'q14', 'q15', 'q17'];

        function getScore(qName) {
            const selected = form.querySelector(`input[name="${qName}"]:checked`);
            if (!selected) {
                return null;
            }
            let value = parseInt(selected.value);
            if (reverseScored.includes(qName)) {
                value = 6 - value; // Reverses 1->5, 2->4, 3->3, etc.
            }
            return value;
        }

        let allAnswered = true;
        
        // Calculate scores for each subscale
        selfItems.forEach(q => {
            const score = getScore(q);
            if (score === null) allAnswered = false;
            selfScore += score;
        });
        otherItems.forEach(q => {
            const score = getScore(q);
            if (score === null) allAnswered = false;
            otherScore += score;
        });
        motivationItems.forEach(q => {
            const score = getScore(q);
            if (score === null) allAnswered = false;
            motivationScore += score;
        });
        
        if (!allAnswered) {
            scoreDisplay.innerHTML = 'Please answer all questions before calculating your score.';
            resultsDiv.style.display = 'block';
            return;
        }

        const totalScore = selfScore + otherScore + motivationScore;
        
        scoreDisplay.innerHTML = `
            <p><strong>Self-Related Mentalization Score:</strong> ${selfScore}</p>
            <p><strong>Other-Related Mentalization Score:</strong> ${otherScore}</p>
            <p><strong>Motivation to Mentalize Score:</strong> ${motivationScore}</p>
            <p><strong>Total Mentalization Score:</strong> ${totalScore}</p>
        `;
        
        resultsDiv.style.display = 'block';
    });

    document.getElementById('reset-btn').addEventListener('click', function() {
        document.getElementById('ments-form').reset();
        document.querySelector('.results').style.display = 'none';
        document.getElementById('score-display').innerHTML = '';
    });
</script>

</body>
